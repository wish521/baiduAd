<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundImg="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".MainActivity">


    <TextView
        android:textSize="@dimen/title_font_size"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/iv_right_pic"
        android:lineSpacingExtra="@dimen/title_line_gap"
        android:maxLines="2"
        android:text="我最大的爱好就是读书我最大的爱好就是读书我最大的爱好就是读书我最大的爱好就是读书"
        android:textColor="#313131">

    </TextView>

    <LinearLayout
        android:id="@+id/ll_second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_right_pic"
        android:layout_alignRight="@+id/iv_right_pic"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="人民日报"
                android:textColor="#bebebe"
                android:textSize="10sp"></TextView>

            <TextView
                android:id="@+id/tv_right_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="人民日报"
                android:textColor="#bebebe"
                android:textSize="10sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close" />
        </RelativeLayout>

    </LinearLayout>

    <com.baidu.baiduapplication.ui.theme.RoundAngleImageView
        android:id="@+id/iv_right_pic"
        android:layout_width="130dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_close"
        roundImg:radius="10dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/iv_right_pic"
        android:layout_alignRight="@+id/iv_right_pic"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_corner_trans"
        android:drawableLeft="@drawable/ic_left_play"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="10:34"
        android:textColor="@color/white"
        android:textSize="10sp">

    </TextView>

    <View
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_second_title"
        android:background="#ececec">

    </View>
</RelativeLayout>